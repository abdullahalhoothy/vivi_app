<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1500"
    app:shimmer_intensity="0.4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F1F1F1">

        <!-- Bottle-like image placeholder -->
        <View
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:background="@drawable/bottle_placeholder"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Placeholder for ratings (stars) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Placeholder stars -->
            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/placeholder_rounded_star"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/placeholder_rounded_star"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/placeholder_rounded_star"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/placeholder_rounded_star"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/placeholder_rounded_star" />
        </LinearLayout>

        <!-- Placeholder for text lines -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/placeholder_rounded"/>

        <View
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/placeholder_rounded"/>

        <View
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:background="@drawable/placeholder_rounded"/>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>

