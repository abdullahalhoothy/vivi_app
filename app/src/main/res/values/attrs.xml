<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="formHint" format="string" />

    <declare-styleable name="FormEditText">
        <attr name="formHint" />
        <attr name="android:inputType" />
    </declare-styleable>

    <declare-styleable name="FormDropDownItem">
        <attr name="formHint" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CurvedImageViewDynamic">
        <attr name="curveFactorX" format="float" />
        <attr name="curveFactorY" format="float" />
        <attr name="curveFactorY2" format="float" />
    </declare-styleable>

    <declare-styleable name="CurvedBottomView">
        <attr name="curveBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomCircleView">
        <attr name="circleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MultiStateToggleButton">
        <attr name="values" format="reference" />
        <attr name="mstbPrimaryColor" format="reference" />
        <attr name="mstbSecondaryColor" format="reference" />
        <attr name="mstbColorPressedText" format="reference" />
        <attr name="mstbColorPressedBackground" format="reference" />
        <attr name="mstbColorPressedBackgroundResource" format="reference" />
        <attr name="mstbColorNotPressedText" format="reference" />
        <attr name="mstbColorNotPressedBackground" format="reference" />
        <attr name="mstbColorNotPressedBackgroundResource" format="reference" />
    </declare-styleable>



    <attr name="colorPrimary" format="reference|color" />
    <attr name="colorPrimaryVariant" format="reference|color" />
    <attr name="colorOnPrimary" format="reference|color" />

    <!-- Additional Colors -->
    <attr name="colorSecondary" format="reference|color" />
    <attr name="colorSecondaryVariant" format="reference|color" />
    <attr name="colorOnSecondary" format="reference|color" />
    <attr name="colorBackground" format="reference|color" />
    <attr name="colorOnBackground" format="reference|color" />
    <attr name="colorSurface" format="reference|color" />
    <attr name="colorOnSurface" format="reference|color" />
    <attr name="colorError" format="reference|color" />
    <attr name="colorOnError" format="reference|color" />
    <attr name="colorTertiary" format="reference|color" />
    <attr name="colorOnTertiary" format="reference|color" />

</resources>